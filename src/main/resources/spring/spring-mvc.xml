<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:mvc="http://www.springframework.org/schema/mvc" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans-4.1.xsd 
		http://www.springframework.org/schema/context 
		http://www.springframework.org/schema/context/spring-context-4.1.xsd 
		http://www.springframework.org/schema/mvc 
		http://www.springframework.org/schema/mvc/spring-mvc-4.1.xsd
		">
		
	<!--引入配置属性文件 -->
	<context:property-placeholder location="classpath:config.properties,
											classpath:wechat.properties"  
											file-encoding="UTF-8"/>  

	<mvc:annotation-driven
		validator="validator"
        conversion-service="conversionService">	
		<mvc:message-converters register-defaults="true">
			
			<!-- HttpMessageConverter的配置主要针对@ResponseBody、@RequestBody注解，进行类型转换-->
            <!-- StringHttpMessageConverter编码为UTF-8，防止乱码 -->
            <bean class="org.springframework.http.converter.StringHttpMessageConverter">
                <constructor-arg value="UTF-8"/>
                <property name = "supportedMediaTypes">
                    <list>
                        <bean class="org.springframework.http.MediaType">
                            <constructor-arg index="0" value="text"/>
                            <constructor-arg index="1" value="plain"/>
                            <constructor-arg index="2" value="UTF-8"/>
                        </bean>
                       <bean class="org.springframework.http.MediaType">
                            <constructor-arg index="0" value="*"/>
                            <constructor-arg index="1" value="*"/>
                            <constructor-arg index="2" value="UTF-8"/>
                        </bean>
                    </list>                   
                </property>
                <!-- 不在http头部中设置Accept-Charset，减少流量 -->
                <property name="writeAcceptCharset" value="false" />
            </bean>

            <!-- 避免IE执行AJAX时,返回JSON出现下载文件 -->
            <!-- 默认使用的转化器：org.springframework.http.converter.json.AbstractJackson2HttpMessageConverter -->
<!--             <bean id="fastJsonHttpMessageConverter" class="com.alibaba.fastjson.support.spring.FastJsonHttpMessageConverter"> -->
<!--                 <property name="supportedMediaTypes"> -->
<!--                     <list> -->
<!--                         <value>text/plain;charset=UTF-8</value> -->
<!--                     </list> -->
<!--                 </property> -->
<!--             </bean> -->
        </mvc:message-converters>
	
		<!-- 注解解析器 -->
        <mvc:argument-resolvers>
        	<bean class="com.anjz.base.bind.method.PageableMethodArgumentResolver"/>
            <bean class="com.anjz.base.bind.method.SearchableMethodArgumentResolver"/>
            <bean class="com.anjz.base.bind.method.CurrentUserMethodArgumentResolver"/>
        </mvc:argument-resolvers>
        
    </mvc:annotation-driven>
    
	<mvc:default-servlet-handler />
		
	<!--对静态资源文件的访问 -->
	<mvc:resources mapping="/static/**" location="/WEB-INF/static/" />
	
	<!-- 自动扫描controller包下的所有类，如果@Controller注入为bean -->
	<context:component-scan base-package="com.anjz.core.controller" />
	
	<!-- 拦截器 --> 
  	<mvc:interceptors>
		<mvc:interceptor>
			<mvc:mapping path="/**"/>
			<bean class="com.anjz.interceptor.AvoidDuplicateSubmissionInterceptor"/>   <!-- 防重提交 -->
		</mvc:interceptor>
	</mvc:interceptors>
	
	<!-- 对模型视图名称的解析，即在模型视图名称添加前后缀 -->
	<bean
		class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="viewClass"
			value="org.springframework.web.servlet.view.JstlView" />
		<property name="prefix" value="/WEB-INF/views/" />
		<property name="suffix" value=".jsp" />
	</bean>
	
	<!-- 自定义异常处理器  -->
	<bean id="exceptionHandler" class="com.anjz.exception.MyExceptionHandler"/>
	
	<!-- 配置多文件上传 -->
	<bean id="multipartResolver"
		class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
		<property name="defaultEncoding">
			<value>UTF-8</value>
		</property>
		<property name="maxUploadSize">
			<!-- 上传文件大小限制为100M，100*1024*1024 -->
			<value>104857600</value>
		</property>
		<property name="maxInMemorySize">
			<value>4096</value>
		</property> 
	</bean>
	
	<!-- shiro -->
	 <import resource="classpath:spring/spring-mvc-shiro.xml"/>

</beans>